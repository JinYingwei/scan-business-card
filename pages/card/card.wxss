/* pages/card.wxss */
.header{
	height: 100rpx;
	display: flex;
	align-items: center;
	border-bottom: 1px solid #ddd;
	justify-content: flex-end;
}
.return-ico{
	width: 40rpx;
	height: 40rpx;
  margin-right: auto;
	margin-left: 34rpx;
}
.card-info{
	font-size: 30rpx;
	margin-right: 182rpx;
}
.btn{
	margin: 0;
	height: 50rpx;
	font-size: 24rpx;
	line-height: 50rpx;
	margin-right: 27rpx;
	background: #507eff;
	color: #fff;
	border:none;
}
.main{
  background: #f9f9f9;
  overflow: hidden;
}
.main-content{
  width: 710rpx;
  height: 1242rpx;
  margin: 36rpx auto 10rpx;
  background: #fff;
  border-radius: 14rpx;
  box-shadow: 0 0 10px #999;
}
.card-logo-box{
  margin: 0 29rpx 0 45rpx;
}
.card-logo{
  width: 400rpx;
  height: 250rpx;
  border-radius: 15rpx;
  margin-top: 67rpx;
	border: 1px solid #ccc;
}
.btnBox{
	float:right;
	width: 174rpx;
	height: 250rpx;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	margin-top: 67rpx; 
}
.btnBox button{
	width: 174rpx;
	display: block;
	/* margin-bottom: 30rpx; */
	background:#507eff;
	color: #fff;
}
.btnBox button::after{
	/* background:#507eff; 
	color: #fff; */
	border:none;
}
.nameUser-box{
  margin-top: 69rpx;
}
input{
  width: 440rpx;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
}
.nameUser{
  height: 60rpx;
  line-height:60rpx;
  margin: 0 auto;
  color: #333;
}
.post-box{
  margin-top: 29rpx;
  margin-bottom: 47rpx;
}
.post{
  margin: 0 auto;
  height: 60rpx;
  line-height: 60rpx;
}
.common-box{
  margin: 22rpx 29rpx 0 45rpx;
  position: relative;
  line-height: 68rpx;
  height: 68rpx;
}
.common-box input{
  box-sizing: border-box;
  display: inline-block;
  position: absolute;
  right: 0;
  text-align: left;
  line-height: 68rpx;
  height: 68rpx;
  padding-left: 16rpx;
  font-size: 28rpx;
}
.common-box label{
  position: absolute;
  width: 142rpx;
  left: 50rpx;
  font-size: 28rpx;
}
.card-x{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 18rpx;
}
.card-tel{
  width: 31rpx;
  height: 30rpx;
}
.card-email{
  width: 30rpx;
  height: 23rpx;
}
.card-inter{
  width: 37rpx;
  height: 29rpx;
}
.card-company{
  width: 33rpx;
  height: 28rpx;
}
.card-address{
  width: 26rpx;
  height: 32rpx;
}
.card-remark{
  width: 26rpx;
  height: 32rpx;
}
.footer{
	background: #f9f9f9;
}
.footer button{
	width: 710rpx;
	margin: 0 auto;
}
