.open-logo{
  width: 41rpx;
  height: 41rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-top: 13rpx;
  vertical-align: top;
}
/* mask */
.mask{
	width: 500rpx;
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -250rpx;
	margin-top: -62rpx;
	z-index: 100;
}
.maskBox{
	padding: 50rpx;
	border: 1px solid #ddd;
	border-radius: 10rpx;
	height: 200rpx;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	background: #000;
	opacity: .5;
}
.maskBox .box{
	width: 100%;
	height: 50rpx;
	display: flex;
	align-items: center;
	color: #fff;
}	
.card-sel{
	width: 50rpx;
	height: 50rpx;
	margin-left: auto;
}
.card-close{
	width: 50rpx;
	height: 50rpx;
}
.hide-x{
	position: absolute;
	right: -4rpx;
	top: -4rpx;
}
.pic-box{
	padding: 0;
	margin: 0;
	margin-left: auto;
	background: transparent;
	line-height: 0;
}